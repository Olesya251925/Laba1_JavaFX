<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.laba1_javafx.FlagController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="10">
        <Label text="Первая полоса"/>
        <RadioButton fx:id="red1" text="Красный"/>
        <RadioButton fx:id="green1" text="Зелёный"/>
        <RadioButton fx:id="blue1" text="Синий"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Вторая полоса"/>
        <RadioButton fx:id="red2" text="Красный"/>
        <RadioButton fx:id="green2" text="Зелёный"/>
        <RadioButton fx:id="blue2" text="Синий"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Третья полоса"/>
        <RadioButton fx:id="red3" text="Красный"/>
        <RadioButton fx:id="green3" text="Зелёный"/>
        <RadioButton fx:id="blue3" text="Синий"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Нарисовать" onAction="#onDrawButtonClick"/>
        <Button text="Стереть" onAction="#onClearButtonClick"/>
    </HBox>

    <Label fx:id="resultLabel" text="Здесь будет результат"/>
</VBox>
